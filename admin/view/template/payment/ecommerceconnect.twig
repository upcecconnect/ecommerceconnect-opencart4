{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa-solid fa-save"></i>
				</button>
				<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
					<i class="fa-solid fa-reply"></i>
				</a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item">
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="alert alert-info">
			{{ ecommerceconnect_logo}}
			{{ ecommerceconnect_description }}
		</div>
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="card">
			<div class="card-header">
				<i class="fa-solid fa-pencil"></i>
				{{ text_edit }}
        <span style='float: right'>v1.0.0</span>
      </div>
			<div class="card-body">
				<form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">

				<div class="row mb-3">
						<label for="input-merchant-id" class="col-sm-2 col-form-label">{{ entry_merchant_id }}</label>
						<div class="col-sm-10">
							<input type="text" required name="payment_ecommerceconnect_merchant_id_0" value="{{ payment_ecommerceconnect_merchant_id_0 }}" placeholder="{{ entry_merchant_id }}" id="input-merchant-id" class="form-control"/>
              <small class="form-text text-muted">required</small>
						</div>
					</div>
					<div class="row mb-3">
						<label for="input-terminal-id" class="col-sm-2 col-form-label">{{ entry_terminal_id }}</label>
						<div class="col-sm-10">
							<input type="text" required name="payment_ecommerceconnect_terminal_id_0" value="{{ payment_ecommerceconnect_terminal_id_0 }}" placeholder="{{ entry_terminal_id }}" id="input-terminal-id" class="form-control"/>
              <small class="form-text text-muted">required</small>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-url" class="col-sm-2 col-form-label">{{ entry_url }}</label>
						<div class="col-sm-10">
							<input type="text" required name="payment_ecommerceconnect_url_0" value="{{ payment_ecommerceconnect_url_0 }}" placeholder="{{ entry_url }}" id="input-url" class="form-control"/>
              <small class="form-text text-muted">required</small>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-pem" class="col-sm-2 col-form-label">{{ entry_pem }}</label>
						<div class="col-sm-10">
							<textarea required rows="10" name="payment_ecommerceconnect_pem_0" placeholder="{{ entry_pem }}" id="input-pem" class="form-control"/>{{ payment_ecommerceconnect_pem_0 }}</textarea>
              <small class="form-text text-muted">required</small>
						</div>
					</div>
					<div class="row mb-3">
						<label for="input-cert" class="col-sm-2 col-form-label">{{ entry_cert }}</label>
						<div class="col-sm-10">
							<textarea required rows="10" name="payment_ecommerceconnect_cert_0" placeholder="{{ entry_cert }}" id="input-cert" class="form-control"/>{{ payment_ecommerceconnect_cert_0 }}</textarea>
              <small class="form-text text-muted">required</small>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-approved-status" class="col-sm-2 col-form-label">{{ entry_approved_status }}</label>
						<div class="col-sm-10">
							<select name="payment_ecommerceconnect_approved_status_id" id="input-approved-status" class="form-select">
								{% for order_status in order_statuses %}
									<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_ecommerceconnect_approved_status_id %} selected="selected" {% endif %}>{{ order_status.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					

					<div class="row mb-3">
						<label for="input-failed-status" class="col-sm-2 col-form-label">{{ entry_declined_status }}</label>
						<div class="col-sm-10">
							<select name="payment_ecommerceconnect_failed_status_id" id="input-failed-status" class="form-select">
								{% for order_status in order_statuses %}
									<option value="{{ order_status.order_status_id }}" {% if order_status.order_status_id == payment_cardinity_payment_failed_status_id %} selected="selected" {% endif %}>{{ order_status.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
				

					<div class="row mb-3">
						<label for="input-geo-zone" class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
						<div class="col-sm-10">
							<select name="payment_ecommerceconnect_geo_zone_id" id="input-geo-zone" class="form-select">
								<option value="0">{{ text_all_zones }}</option>
								{% for geo_zone in geo_zones %}
									<option value="{{ geo_zone.geo_zone_id }}" {% if geo_zone.geo_zone_id == payment_cardinity_payment_geo_zone_id %} selected="selected" {% endif %}>{{ geo_zone.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
						<div class="col-sm-10">
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="payment_ecommerceconnect_status" value="0"/>
								<input type="checkbox" name="payment_ecommerceconnect_status" value="1" id="input-status" class="form-check-input" {% if payment_ecommerceconnect_status %} checked {% endif %}/>
							</div>
						</div>
					</div>

					<div class="row mb-3">
						<label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_ecommerceconnect_sort_order" value="{{ payment_ecommerceconnect_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
						</div>
					</div>

          <div class="row mb-3">
						<label for="input-debug" class="col-sm-2 col-form-label">{{ entry_debug }}</label>
						<div class="col-sm-10">
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="payment_ecommerceconnect_debug" value="0"/>
								<input type="checkbox" name="payment_ecommerceconnect_debug" value="1" id="input-debug" class="form-check-input" {% if payment_cardinity_payment_debug %} checked {% endif %}/>
							</div>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}
